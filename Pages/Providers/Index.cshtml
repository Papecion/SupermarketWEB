@page
@model SupermarketWEB.Pages.Providers.IndexModel
@{
        ViewData["Title"] = "Index Categories";
    }
    <h1>Index Providers</h1>

    <p>
        <a asp-page="Create" class="btn btn-success">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                @Html.DisplayNameFor(model=>model.Providers[0].Document)
                </th>
                <th>
                @Html.DisplayNameFor(model=>model.Providers[0].Complete_Name)
                </th>
                <th>
                @Html.DisplayNameFor(model=>model.Providers[0].Code)
                </th>
                <th>
                @Html.DisplayNameFor(model=>model.Providers[0].Email)
                </th>
                <th>
                @Html.DisplayNameFor(model=>model.Providers[0].Phone)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Providers)
            {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Document)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Complete_Name)
                    </td>
                     <td>
                    @Html.DisplayFor(modelItem => item.Code)
                    </td>
                     <td>
                    @Html.DisplayFor(modelItem => item.Email)
                    </td>
                     <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
